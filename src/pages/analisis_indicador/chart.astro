---
import { getSession } from "auth-astro/server";
import ComputoService from "../../services/Computo";
import IndicatorChart from "../../components/Indicators/IndicatorChart.vue";
import RootLayout from "../../layouts/RootLayout.astro";
import type { Indicators } from "@/utils/indicators";

const session: any = await getSession(Astro.request);
const searchParams = Astro.url.searchParams;
const key = (searchParams.get("key") || "asistencia") as keyof Indicators;

async function getComputo() {
  const service = new ComputoService();
  try {
    return await service.getCompareYears(session?.jwt, key);
  } catch (e) {
    console.log(e);
  }
}
const computo = await getComputo();
---

<RootLayout>
  <IndicatorChart computo={computo} client:load />
</RootLayout>
