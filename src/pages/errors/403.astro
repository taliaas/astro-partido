---
import {
  ShieldX,
  ArrowLeft,
  Mail,
  LogIn,
  Home,
  AlertTriangle,
} from "lucide-vue-next";
import { Button } from "../../components/ui/button";
import { Card, CardContent } from "../../components/ui/card";
import { Alert, AlertDescription } from "../../components/ui/alert";
import RootLayout from "../../layouts/RootLayout.astro";
---

<RootLayout>
  <div
    class="min-h-screen bg-gradient-to-br from-orange-50 to-red-50 flex items-center justify-center p-4"
  >
    <div class="w-full max-w-2xl">
      <Card class="border-0 shadow-2xl">
        <CardContent class="p-8 md:p-12">
          <div class="text-center space-y-6">
            <!-- Error Icon -->
            <div
              class="mx-auto w-24 h-24 bg-orange-100 rounded-full flex items-center justify-center"
            >
              <ShieldX class="w-12 h-12 text-orange-600" />
            </div>

            <!-- Error Code -->
            <div class="space-y-2">
              <h1 class="text-6xl md:text-7xl font-bold text-orange-600">
                403
              </h1>
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
                Acceso prohibido
              </h2>
            </div>

            <!-- Error Message -->
            <p class="text-gray-600 text-lg leading-relaxed max-w-md mx-auto">
              Tu cuenta no tiene los permisos necesarios para acceder a este
              recurso.
            </p>

            <!-- Reason Alert -->
            <Alert class="max-w-md mx-auto">
              <AlertTriangle class="size-4" />
              <AlertDescription class="text-left"
                >Esta acción requiere permisos de administrador o un nivel de
                acceso superior.
              </AlertDescription>
            </Alert>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 justify-center pt-6">
              <a href="/auth/login">
                <Button
                  class="flex items-center gap-2 bg-red-600 hover:bg-red-700"
                >
                  <LogIn class="size-4" />
                  Iniciar sesión
                </Button>
              </a>
              <a href="/">
                <Button variant="outline" class="flex items-center gap-2">
                  <Home class="size-4" />
                  Ir al inicio
                </Button>
              </a>
            </div>

            <!-- Contact Support -->
            <div class="pt-6 border-t border-gray-200">
              <p class="text-sm text-gray-500 mb-3">
                ¿Crees que esto es un error? Solicita acceso a nuestro equipo
              </p>
              <Button
                variant="ghost"
                class="flex items-center gap-2 text-gray-600 hover:text-gray-900"
              >
                <Mail class="size-4" />
                Solicitar acceso
              </Button>
            </div>
          </div>
        </CardContent>
      </Card>

      <!-- Additional Info -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500">
          Código de error: 403 - Forbidden Access
        </p>
      </div>
    </div>
  </div>
</RootLayout>
