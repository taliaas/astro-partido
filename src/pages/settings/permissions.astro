---
import ClaimsManage from "@/components/settings/ClaimsManage.vue";
import RootLayout from "@/layouts/RootLayout.astro";
import SettingsLayout from "@/layouts/SettingsLayout.astro";
import ClaimService from "@/services/ClaimService";
import RoleService from "@/services/RoleService";
import { getSession } from "auth-astro/server";

const session = (await getSession(Astro.request)) as any

async function getAllRoles() {
  const service = new RoleService();
  try {
    return service.getRoles(session.jwt);
  } catch (e) {
    console.error(e);
  }
}

async function getClaims() {
  const service = new ClaimService();
  try {
    return service.getAllClaims(session.jwt);
  } catch (e) {
    console.error(e);
  }
}

const roles = await getAllRoles();
const claims = await getClaims();
---

<RootLayout>
  <SettingsLayout>
    <ClaimsManage claims={claims} roles={roles} client:load />
  </SettingsLayout>
</RootLayout>
